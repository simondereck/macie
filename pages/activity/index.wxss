/* pages/goods/index.wxss */
.activity-image{
  width: 100vw;
  height: 70vh;
}

.activity-image image{
  width: 100vw;
  height: 70vh;
  mode: aspectFill;
  box-shadow: 4px 2px 4px rgba(0, 0, 0, 0.3);
}

.activity-title{
  padding: 4vw;
  font-size: 6vw;
}

.activity-description{
  padding: 4vw;
}


.goods{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding-top: 2vw;
}


.goods-item image{
  width: 40vw;
  height: 40vw;
}

.goods-item {
  display: flex;
  position: relative;
  background: white;
  box-shadow: 4px 2px 4px rgba(0, 0, 0, 0.3);
  margin-bottom: 2vw;
  margin-top: 2vw;
  padding: 4vw;
}

.goods-item-info{
  padding: 2vw;
}

.good-item-bottom{
  /* display: flex; */
  position: absolute;
  bottom: 10px;
  justify-content: space-between;
  width: 50vw;
}

.car-shop,.car-shop image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  position: relative;
  left: 40vw;
}


.before-price text{
  text-decoration: line-through gray;
}

.price text{
  color: red;
}