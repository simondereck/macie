/* pages/category/detail.wxss */
scroll-view{
  width: 100vw;
  height: 92vh;
}

swiper{
  background: rgba(255, 255, 255, 0.8);
  height: 40vh;
}

swiper-item{
  display: flex;
  justify-content: center;
  height: 40vh;
  padding: 0;
  margin: 0;
}

swiper-item image{
  margin:auto;
  width:100%;
  height: 40vh;
}


.price{
  display: flex;
  margin-left: 20px;
  margin-bottom: 20px;
  /* padding: 20px; */
}

.price text{
  color: red;
}

.info{
  padding:20px;
  display: flex;
  justify-content: space-between;
}

.base-info{
  padding:20px;
}

.base-info view{
  margin-bottom: 20px;
}


.share image{
  width: 5vw;
  height: 5vw;
  object-fit: cover;
}

.description{
  padding: 20px;
}

.bottom{
  padding: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottom image{
  width: 5vw;
  height: 5vw;
  margin-right: 2vw;
}

.bottom-number{
  display: flex;
  align-items: center;
}

.bottom-number .number{
  width: 10vw;
  text-align: center;
}

.car{
  background-color: #E6007D;
  padding: 5px;
  color: white;
}

.shopping{
  position: absolute;
  bottom: 0;
  width: 100vw;
  height: 8vh;
  background-color: #f5f5f5;
  display: flex;
}

.shopping button{
  border: 0;
  border-radius: 0;
  background: #E6007D;
  color: white;
  margin: 0;
  position: relative;
  line-height: 45px;
  display: inline-block;
}