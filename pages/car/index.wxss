/* pages/car/index.wxss */
.top-bar{
  width: 92vw;
  height: 8vw;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  padding-right: 4vw;
  padding-left: 4vw;
  align-items: center;
  font-size: 4vw;

}
.edit{
  color:red;
}
.top-bar .login{
  display: flex;
  align-items: center;
}
.top-bar .login image{
  width: 6vw;
  height: 6vw;
}

.empty{
  width: 70vw;
  margin: 40vw auto auto;
  height: 40vw;
}
.empty image{
  width: 70vw;
  height: 40vw;
  mode: aspectFill;
}

.good-item{
  display: flex;
  width: 92vw;
  height: 50vw;
  margin: 2vw 4vw 2vw;
  border-bottom: 1px solid #f5f5f5;
  font-size: 3vw;
}

.good-item-cover{
  width: 41vw;
  height: 41vw;
  padding: 1vw;
}

.good-item-cover image{
  width: 41vw;
  height: 41vw;
  mode:aspectFill;
}

.good-item-detail{
  padding: 10px;
  position: relative;
}

.good-item-title{
  font-size: 3.5vw;
  font-weight: bolder;
}

.good-item-bottom{
  position: absolute;
  top: 42vw;
  display: flex;
  width: 50vw;
  justify-content: space-around;

}

.good-item-bottom image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  width: 4vw;
  height: 4vw;
}

.car-shop image{
  width: 4vw;
  height: 4vw;
}
.total{
  text-align: right;
}

.total text{
  margin-right: 20px;
  color: red;
}
.query{
  margin-top: 20vw;
}

.query button{
  width: 80vw;
  background-color: #E6007D;
  border-radius: 0;
  color: white;
}

.before-price text{
  text-decoration: gray line-through;
}

.price text{
  color: red;
}