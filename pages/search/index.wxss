/* pages/search/index.wxss */
page{
  width: 100%;
  height: 100%;
}

.search-page{
  height: 100%;
}
.search-bar{
  display: flex;
  padding: 2vw;
  border-bottom: 1px solid #f5f5f5;
  height: 8vw;
}

.search-bar button{
  width: 15vw;
  font-size: 3vw;
  color: white;
  background: #E6007D;
  margin-left: 2vw;
  padding: 0;
  line-height: 8vw;
}

.search{
  display: flex;
  background: whitesmoke;
  padding: 1vw;
  width: 75vw;
  border-radius: 6vw;
  font-size: 4vw;
  justify-content: center;
  align-items: center;
}



.search-input{
  width: 63vw;
}
.search-image{
  width: 8vw;
  height: 8vw;
}

.search-result{
  width: 100%;
  height: 92vh;
}
.result-title{
  color: gray;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
}


.goods{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding-top: 2vw;
}


.goods-item image{
  width: 40vw;
  height: 40vw;
}

.goods-item {
  display: flex;
  position: relative;
  background: white;
  box-shadow: 4px 2px 4px rgba(0, 0, 0, 0.3);
  margin-bottom: 2vw;
  margin-top: 2vw;
  padding: 4vw;
}

.goods-item-info{
  padding: 2vw;
}

.good-item-bottom{
  /* display: flex; */
  position: absolute;
  bottom: 10px;
  justify-content: space-between;
  width: 50vw;
}

.car-shop,.car-shop image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  position: relative;
  left: 40vw;
}

.activity-item{
  width: 100vw;
  height: 130vw;
  text-align: center;
}

.activity-cover image{
  width: 100vw;
  height: 124vw;
  mode:aspectFill;
}



.category-items{
  display: flex;
  margin-bottom: 20px;
}
.category-item{
  width: 50vw;
}

.category-cover{
  width: 30vw;
  height: 30vw;
  margin: auto;
}
.category-cover image{
  width: 30vw;
  height: 30vw;
  mode: aspectFill;
  border-radius: 30vw;
}

.category-name{
  text-align: center;
}

.brand-items{
  display: flex;
}

.brand-item{
  width: 50vw;
  height: 50vw;
}

.brand-cover{
  width: 45vw;
  height: 45vw;
  margin: auto;
}

.brand-cover image{
  width: 45vw;
  height: 45vw;
  mode:aspectFill;
}

.brand-name{
  text-align: center;
}

.before-price text{
  text-decoration: line-through gray;
}

.price text{
  text-decoration: red;
}