/* pages/moi/likes.wxss */


.empty{
  width: 70vw;
  margin: 40vw auto auto;
  height: 40vw;
}
.empty image{
  width: 70vw;
  height: 40vw;
  mode: aspectFill;
}

.good-item{
  display: flex;
  width: 92vw;
  height: 42vw;
  margin: 2vw 4vw 2vw;
  border-bottom: 1px solid #f5f5f5;
}

.good-item-cover{
  width: 38vw;
  height: 38vw;
  padding: 2vw;
}

.good-item-cover image{
  width: 38vw;
  height: 38vw;
  mode:aspectFill;
}

.good-item-detail{
  padding: 10px;
  position: relative;
}

.good-item-title{
  font-size: 5vw;
  font-weight: bolder;
}

.good-item-bottom{
  position: absolute;
  top: 34vw;
  display: flex;
  width: 50vw;
  /* justify-content: space-around; */

}

.good-item-bottom image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  width: 4vw;
  height: 4vw;
  position: absolute;
  right: 10vw;
}

.car-shop image{
  width: 4vw;
  height: 4vw;
}



.before-price text{
  text-decoration: line-through gray;
}

.price text{
  color: red;
}