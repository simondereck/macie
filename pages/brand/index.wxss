/* pages/brand/index.wxss */
.brand-category{
  width: 100vw;
  height: 10vw;
  border-bottom: 1px solid #f5f5f5;
  white-space: nowrap;
}

.brand{
  display: inline-block;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  padding-right: 2vw;
  padding-left: 2vw;
}

.select-brand{
  display: inline-block;
  text-align: center;
  height: 10vw;
  line-height: 10vw;
  padding-right: 2vw;
  padding-left: 2vw;
  background: #f5f5f5;
  color: #E6007D;
}

.good-item{
  display: flex;
  width: 92vw;
  height: 42vw;
  margin: 2vw 4vw 2vw;
  border-bottom: 1px solid #f5f5f5;
}

.good-item-cover{
  width: 38vw;
  height: 38vw;
  padding: 2vw;
}

.good-item-cover image{
  width: 38vw;
  height: 38vw;
  mode:aspectFill;
}

.good-item-detail{
  padding: 10px;
  position: relative;
  font-size: 3vw;
}

.good-item-title{
  font-size: 3.5vw;
  font-weight: bolder;
}

.good-item-bottom{
  position: absolute;
  top: 34vw;
  display: flex;
  width: 50vw;
}

.good-item-bottom image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  width: 4vw;
  height: 4vw;
  position: absolute;
  right: 10vw;
}

.car-shop image{
  width: 4vw;
  height: 4vw;
}

.no-data{
  width: 60vw;
  height: 60vw;
  padding: 20vw;
  line-height: 80vh;
}

.no-data image{
  width: 60vw;
  height: 60vw;
  text-align: center;
}


.before-price text{
  text-decoration: line-through gray;
}

.price text{
  color: red;
}