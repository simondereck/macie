/* pages/order/index.wxss */
.items{
  width: 100%;
  height: 100vh;
  background:#f5f5f5;
}

.item{
  background: white;
  padding: 4vw;
  margin: 2vw;
  box-shadow: 4px 2px 4px rgba(0, 0, 0, 0.3);
  font-size: 4vw;
}

.item-body{
  display: flex;
  margin-top: 2vw;
}


.price{
  color: red;
  margin-left: 4vw;
}

.ctime{
  margin-top: 2vw;
}

.empty{
  width: 70vw;
  margin: 40vw auto auto;
  height: 40vw;
}
.empty image{
  width: 70vw;
  height: 40vw;
  mode: aspectFill;
}