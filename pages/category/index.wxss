/* pages/category/index.wxss */
.cover{
  width: 100%;
  height: 30vh;
  margin-bottom: 2vh;
  box-shadow: 2px 4px 2px rgba(0, 0, 0, 0.3);
}

.cover image{
  width: 100%;
  height: 30vh;
  mode: aspectFill;
}


.top-bar{
  display: flex;
  justify-content: space-around;
}

.top-bar-item{
  padding: 10px;
}
.goods{
  width: 100%;
  height: 100vh;
  background: #f5f5f5;
  padding-top: 2vw;
}


.goods-item image{
  width: 40vw;
  height: 40vw;
}

.goods-item {
  display: flex;
  position: relative;
  background: white;
  box-shadow: 4px 2px 4px rgba(0, 0, 0, 0.3);
  margin-bottom: 2vw;
  margin-top: 2vw;
  padding: 4vw;
}

.goods-item-info{
  padding: 2vw;
}

.good-item-bottom{
  /* display: flex; */
  position: absolute;
  bottom: 10px;
  justify-content: space-between;
  width: 50vw;
}

.car-shop,.car-shop image{
  width: 5vw;
  height: 5vw;
}

.car-shop{
  position: relative;
  left: 40vw;
}
.before-price text{
  text-decoration: line-through gray;
}

.price text{
  color: red;
}


.no-data{
  width: 60vw;
  height: 60vw;
  padding: 20vw;
  line-height: 80vh;
}

.no-data image{
  width: 60vw;
  height: 60vw;
  text-align: center;
}